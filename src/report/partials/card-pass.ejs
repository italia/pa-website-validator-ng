<div class="card-wrapper card-space">
  <div class="card card-bg">
    <% if (results.status === 'x') { %>
    <div class="card-body d-flex justify-content-between align-items-center gap-5 error">
      <h3 class="card-title h5">RISULTATO GENERALE SCANSIONE FALLITA PER ERRORE</h3>
      <div class="card-content">
        <div class="result-point error">
          x
        </div>
      </div>
    </div>
    <% } else { %>
    <div class="card-body d-flex justify-content-between align-items-center gap-5">
      <h3 class="card-title h5">RISULTATO GENERALE</h3>
      <div class="card-content">
        <div class="result-point <%= results.status %>">
          <%= results.status %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>