    <div class="card-body d-flex justify-content-between align-items-center gap-5">
      <h3 class="card-title h5">CITTADINO INFORMATO</h3>
      <div class="card-content">
        <div class="progress-donut-wrapper">
          <div class="progress-donut" data-bs-progress-donut data-bs-value="<%= results.passed_audits / results.total_audits %>" data-bs-color="#5cc98d" id="prog-donut-2"></div>
